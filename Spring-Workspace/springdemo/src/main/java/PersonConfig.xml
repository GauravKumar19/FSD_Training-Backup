<?xml version="1.0" encoding="UTF-8"?>
<beans
xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!-- Creating Bean/Object of Person class -->
<bean id="p1" class="com.coforge.training.springdemo.model.Person">
	
	<!-- Constructor Injection -->
	<constructor-arg value="999" type="int"></constructor-arg>
	<constructor-arg value="Gaurav"></constructor-arg>
	<constructor-arg>
		<map>
			<entry key="mobile" value="8765443218">	</entry>
			<entry key="Landline" value="0120-2456789">	</entry>
		</map>
	</constructor-arg>
	
</bean>
</beans>